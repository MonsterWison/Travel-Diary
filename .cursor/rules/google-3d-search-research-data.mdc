# 實體類型分類
def classify_entity_type(entity):
    categories = {
        "restaurant": ["food", "dining", "cuisine"],
        "hotel": ["accommodation", "lodging", "stay"],
        "attraction": ["tourist", "landmark", "museum"],
        "transportation": ["station", "airport", "terminal"]
    }
    
    for category, keywords in categories.items():
        if any(keyword in entity.lower() for keyword in keywords):
            return category
    return "unknown"
